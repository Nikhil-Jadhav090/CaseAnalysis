@startuml CaseAnalysisUseCaseDiagram

' Configuration
skinparam actorStyle awesome
skinparam packageStyle rectangle
skinparam shadowing false
skinparam backgroundColor #FEFEFE
skinparam actorBorderColor #a855f7
skinparam usecaseBorderColor #ec4899
skinparam rectangleBorderColor #666666
skinparam arrowColor #333333

' Title
title Case Analysis System - Use Case Diagram

' Left Side Actors
left to right direction
actor "User\n(Investigator)" as User #LightBlue
actor "Admin\n(Supervisor)" as Admin #LightCoral

' Main System Boundary
rectangle "Case Analysis Platform" {
  
  ' ========== Authentication & User Management ==========
  package "Authentication & User Management" #LightYellow {
    usecase "Register Account" as UC1
    usecase "Login to System" as UC2
    usecase "Logout" as UC3
    usecase "View Profile" as UC4
    usecase "Update Profile" as UC5
  }
  
  ' ========== Case Management ==========
  package "Case Management" #LightCyan {
    usecase "Create New Case" as UC6
    usecase "View Case List" as UC7
    usecase "View Case Details" as UC8
    usecase "Update Case Info" as UC9
    usecase "Delete Case" as UC10
    usecase "Search Cases" as UC11
    usecase "Filter Cases" as UC12
    usecase "Close Case" as UC13
  }
  
  ' ========== Document Management ==========
  package "Document Management" #Lavender {
    usecase "Upload Documents" as UC14
    usecase "View Documents" as UC15
    usecase "Download Documents" as UC16
    usecase "Delete Documents" as UC17
  }
  
  ' ========== AI Analysis ==========
  package "AI-Powered Analysis" #LightGreen {
    usecase "Analyze Case with AI" as UC18
    usecase "View AI Analysis Report" as UC19
    usecase "Generate Recommendations" as UC20
    usecase "Evaluate Evidence" as UC21
    usecase "Identify Legal Precedents" as UC22
  }
  
  ' ========== Chat Assistant ==========
  package "AI Chat Assistant" #MistyRose {
    usecase "Create Chat Session" as UC23
    usecase "Send Message" as UC24
    usecase "Receive AI Response" as UC25
    usecase "View Chat History" as UC26
    usecase "Link Chat to Case" as UC27
  }
  
  ' ========== Case Collaboration ==========
  package "Collaboration & Comments" #Wheat {
    usecase "Add Case Comment" as UC28
    usecase "View Comments" as UC29
    usecase "Assign Case to User" as UC30
    usecase "Update Case Status" as UC31
  }
  
  ' ========== Admin Functions ==========
  package "Administration" #LightSalmon {
    usecase "Manage Users" as UC32
    usecase "View All Cases" as UC33
    usecase "Generate Reports" as UC34
    usecase "View System Statistics" as UC35
    usecase "Configure System Settings" as UC36
  }
  
  ' ========== Reporting & Export ==========
  package "Reporting & Export" #PaleGreen {
    usecase "Export Case to PDF" as UC37
    usecase "Generate Case Summary" as UC38
    usecase "Print Case Report" as UC39
    usecase "Download Analysis Report" as UC40
  }
}

' Right Side Actors
actor "AI System\n(Gemini)" as AI #LightGreen
actor "System" as System #LightGray

